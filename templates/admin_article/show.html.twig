{% extends "base.html.twig" %}

{% block title %}Login page{% endblock %}
{% block title_header %}Login{% endblock %}

{% block content %}

<main style="min-height: 75vh" class="container">
      <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <a class="m-1 btn btn-warning" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">edit</a>
    {{ include('admin_article/_delete_form.html.twig') }}
</main>

{% endblock content %}
