
{% if menus|length != 0 %}
<div class="row my-4">
    <h2 class="display-5 link-body-emphasis mb-1">Menus</h2>
    <hr>
  {% for menu in menus %}
  <div class="col-md-6">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <strong class="d-inline-block mb-2 text-primary-emphasis">DELICIOUS</strong>
        <h3 class="mb-0">{{ menu.name }}</h3>
        <div class="mb-1 text-body-secondary">{{ menu.price }} â‚¬</div>
        <p class="card-text mb-auto">{{ menu.starter }}</p>
        <p class="card-text mb-auto">{{ menu.dish }}</p>
        <p class="card-text mb-auto">{{ menu.dessert }}</p>
        {# <a href="/blog/{{menu.id}}" class="icon-link gap-1 icon-link-hover stretched-link">
          Continue reading
          <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
        </a> #}
